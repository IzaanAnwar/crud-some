{
  "compilerOptions": {
    "target": "ES5", // Targeting an older version of JavaScript for broad compatibility.
    "module": "CommonJS", // CommonJS modules are broadly understood by many systems.
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "declaration": true,
    "noEmit": false,
    "strict": true, 
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true, 
    
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "jest.config.ts"
  ]
}
